# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=your_mongodb_connection_string_here

# JWT Secrets (IMPORTANT: Generate your own secure secrets!)
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_min_64_characters_long
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_min_64_characters_long

# JWT Expiration
JWT_EXPIRE=30m
JWT_REFRESH_EXPIRE=7d

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000
